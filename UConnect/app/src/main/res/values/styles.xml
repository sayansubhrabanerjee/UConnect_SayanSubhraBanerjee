<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Base application theme. -->

    <style name="Theme_Show_Dialog_Alert" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="android:background">#00b58a</item>-->
        <item name="android:background">#e3e4fa</item>
        <item name="android:textColor">#63029d</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@android:color/holo_orange_light</item>
        <item name="android:textAppearanceMedium">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:actionMenuTextColor">#000000</item>
    </style>

</resources>
